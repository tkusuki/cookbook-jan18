<h1>CookBook</h1>
<p>Bem-vindo ao maior livro de receitas online</p>
<p><%= flash[:remove] %></p>
<p><%= flash[:error] %></p>
<hr>
<%= form_tag(search_recipes_path, method: "get") do %>
  <%= label_tag(:search, "Buscar por:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Buscar") %>
<% end %>
<hr>
<%= link_to 'Enviar uma receita', new_recipe_path %>
<br>
<% @cuisines.each do |cuisine| %>
  <%= link_to cuisine.name, cuisine_path(cuisine.id) %>
<% end %>
<br>
<% @recipe_types.each do |type| %>
  <%= link_to type.name, recipe_type_path(type.id) %>
<% end %>
<hr>

<%= render partial: 'shared/recipes', locals: {recipes: @recipes} %>
